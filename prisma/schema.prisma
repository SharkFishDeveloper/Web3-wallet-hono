generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User{
  password    String   @id 
  seedPhrase  String[]   
  accounts    Accounts[] 
}

model Accounts{
  id          String  @id 
  accountName String
  user        User    @relation(fields: [id],references: [password])
  blockchain  BlockchainWallet[]
}

model BlockchainWallet{
    id          String     @id  
    name        Blockchain
    privateKey  String
    publicKey   String
    balance     String
    account     Accounts   @relation(fields: [id],references: [id])
}

enum Blockchain {
  SOLANA
  BITCOIN
  ETHERIUM
}